        <xpath expr="//table[@name='stock_backorder_table']" position="replace">
            <table class="table table-sm" name="stock_backorder_table">
                <thead>
                    <tr>
                        <th name="th_sb_product">
                            <strong>Product</strong>
                        </th>
                        <th name="th_description">
                            <strong>Description</strong>
                        </th>
                        <th name="th_sb_quantity">
                            <strong>Quantity</strong>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="backorders.mapped('move_ids').filtered(lambda x: x.product_uom_qty)" t-as="bo_line">
                        <td>
                            <span t-field="bo_line.product_id.name">Office Chair</span>
                        </td>
                        <td>
                            <t t-esc="bo_line.description_picking"/>
                        </td>
                        <td>
                            <span t-field="bo_line.product_uom_qty">3.00</span>
                            <span t-field="bo_line.product_uom" groups="uom.group_uom">units</span>
                        </td>
