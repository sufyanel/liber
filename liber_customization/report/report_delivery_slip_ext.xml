<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="delivery_slip_ext_123" inherit_id="stock.report_delivery_document">
        <xpath expr="//t[@t-set='address']" position="replace">
            <div style="margin-top: -15px;">
                <div name="div_outgoing_address" class="row">
                    <div name="Vendor Address" class="col-6">
                        <t t-if="o.picking_type_id.code == 'outgoing'">
                            <span>
                                <strong>Shipping Address:</strong>
                            </span>
                            <div t-field="o.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </t>

                        <t t-elif="o.picking_type_id.code == 'incoming'">
                            <span>
                                <strong>Vendor Address:</strong>
                            </span>
                            <div t-field="o.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </t>
                    </div>
                    <div class="col-6">
                        <div t-if="o.picking_type_id.code == 'incoming' and o.should_print_delivery_address()">
                            <spacol-4n>
                                <strong>Delivery Address:</strong>
                            </spacol-4n>
                            <div t-field="o.move_ids[0].partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                        <div t-elif="o.picking_type_id.code != 'internal' and o.picking_type_id.warehouse_id.partner_id">
                            <span>
                                <strong>Warehouse Address:</strong>
                            </span>
                            <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                    </div>

                </div>
            </div>
        </xpath>

        <xpath expr="//t[@t-set='information_block']" position="after">
            <div name="drop_shipping_address" class="row" style="text-align: left; margin-left: 480px;">
                <t t-if="o.picking_type_id.code == 'dropship'">
                    <div style="display: flex; flex-direction: column; align-items: flex-start;">
                        <span style="font-weight: bold; margin-bottom: 5px;">Vendor Address:</span>
                        <div style="display: flex; flex-direction: column; gap: 5px;">
                            <div t-field="o.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                            <div t-field="o.partner_id"
                                 t-options='{"widget": "contact", "fields": ["name"], "no_marker": True}'/>
                            <div t-field="o.partner_id"
                                 t-options='{"widget": "contact", "fields": ["phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                    </div>
                </t>
            </div>


        </xpath>
    </template>
</odoo>