<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="delivery_slip_ext_123" inherit_id="stock.report_delivery_document">
        <xpath expr="//t[@t-set='address']" position="replace">
            <div style="margin-top: -15px; font-size:20px">
                <div name="div_outgoing_address" class="row">
                    <div name="Vendor Address" class="col-6">
                        <t t-if="o.picking_type_id.code == 'outgoing' or o.picking_type_id.code == 'dropship'">
                            <span>
                                <strong>Shipping Address:</strong>
                            </span>
                            <div t-field="o.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </t>

                        <t t-elif="o.picking_type_id.code == 'incoming'">
                            <span>
                                <strong>Vendor Address:</strong>
                            </span>
                            <div t-field="o.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </t>


                    </div>
                    <div class="col-6">
                        <div t-if="o.picking_type_id.code == 'incoming' and o.should_print_delivery_address()">
                            <spacol-4n>
                                <strong>Delivery Address:</strong>
                            </spacol-4n>
                            <div t-field="o.move_ids[0].partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                        <div t-elif="o.picking_type_id.code == 'dropship'">
                            <span>
                                <strong>Vendor Address:</strong>
                            </span>
                            <div t-field="o.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                        <div t-elif="o.picking_type_id.code != 'internal' and o.picking_type_id.warehouse_id.partner_id">
                            <span>
                                <strong>Warehouse Address:</strong>
                            </span>
                            <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>

                    </div>

                </div>
            </div>
        </xpath>

    </template>
</odoo>