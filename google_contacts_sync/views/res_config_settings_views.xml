<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.google_contacts</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id='contacts_settings' position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="google_contacts_add">
                        <div class='o_setting_right_pane'>
                            <span class="o_form_label">Google Contacts Credentials</span>
                            <div class="text-muted">
                                Bring all Contacts from Google into Odoo.
                            </div>
                            <div class="content-group">
                                <div class="row mt16" id="contacts_client_identifier">
                                    <label string="Google Client ID" for="google_contacts_client_identifier" class="col-lg-3 o_light_label"/>
                                    <field name="google_contacts_client_identifier" password="False" class="ml-2"/>
                                </div>
                                <div class="row mt16" id="contacts_client_secret">
                                    <label string="Google Client Secret" for="google_contacts_client_secret" class="col-lg-3 o_light_label"/>
                                    <field name="google_contacts_client_secret" password="True" class="ml-2"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>
