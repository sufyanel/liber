<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fetchmail_form_add_company" model="ir.ui.view">
        <field name="name">fetchmail.form.add.company</field>
        <field name="model">fetchmail.server</field>
        <field name="inherit_id" ref="fetchmail.view_email_server_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='server_type']" position="after">
                <field name="company_id" groups="base.group_multi_company"
                       options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <record id="fetchmail_tree_add_company" model="ir.ui.view">
        <field name="name">fetchmail.tree.add.company</field>
        <field name="model">fetchmail.server</field>
        <field name="inherit_id" ref="fetchmail.view_email_server_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='message_ids']" position="after">
                <field name="company_id" groups="base.group_multi_company"/>
            </xpath>
        </field>
    </record>
</odoo>