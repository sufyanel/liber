<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_delivery_document_inherit_liber" inherit_id="stock.report_delivery_document">
         <xpath expr="//table[@name='stock_move_line_table']//thead//tr//th[@name='th_sml_product']" position="after">
            <th name="th_description">Description</th>
        </xpath>
    </template>
    <template id="report_delivery_document_inherit_libers_add_description" inherit_id="stock.stock_report_delivery_aggregated_move_lines">
        <xpath expr="//td[position()=1]" position="replace">
        <td name="td_name">
                <span t-esc="aggregated_lines[line]['product']['name']"/>
            </td>
        </xpath>
         <xpath expr="//td[position()=1]" position="after">
        <td name="td_name">
                <span t-esc="aggregated_lines[line]['product'].description_sale"/>
            </td>
        </xpath>
    </template>
</odoo>