<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--  PDF Documents  -->
    <template id="pdf_documents" name="PDF Documents">
        <section class="pdf_documents">
            <div class="container py-5">
                <h2 class="text-center mb-4">Our Catalog</h2>
                <div class="row g-3">
                    <div class="col-md-4">
                        <a href="/liber_website_customizations/static/src/pdf_files/Ball Bearing Products Lamina.pdf"
                           target="_blank"
                           class="text-decoration-none text-dark">
                            <div class="card shadow-sm">
                                <div class="card-body d-flex align-items-center">
                                    <img src="/liber_website_customizations/static/description/icon.png"
                                         alt="PDF Icon"/>
                                    <div class="flex-grow-1">
                                        <h5 class="mb-0">Ball Bearing Products Lamina</h5>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a
                                href="/liber_website_customizations/static/src/pdf_files/Pin &amp; Bushing TC Catalog With Index.pdf"
                                target="_blank"
                                class="text-decoration-none text-dark">
                            <div class="card shadow-sm">
                                <div class="card-body d-flex align-items-center">
                                    <img src="/liber_website_customizations/static/description/icon.png"
                                         alt="PDF Icon"/>
                                    <div class="flex-grow-1">
                                        <h5 class="mb-0">Pin &amp; Bushing TC Catalog With Index</h5>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/liber_website_customizations/static/src/pdf_files/Pins And Bushings-Inch Danly.pdf"
                           target="_blank"
                           class="text-decoration-none text-dark">
                            <div class="card shadow-sm">
                                <div class="card-body d-flex align-items-center">
                                    <img src="/liber_website_customizations/static/description/icon.png"
                                         alt="PDF Icon"/>
                                    <div class="flex-grow-1">
                                        <h5 class="mb-0">Pins And Bushings-Inch Danly</h5>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <!--  Liber: Snippets  -->
    <template id="liber_snippets" inherit_id="website.snippets" name="Liber: Snippets">
        <xpath expr="//div[@id='snippet_structure']" position="inside">
            <div class="o_panel_header">Liber: Snippets</div>
            <div class="o_panel_body">
                <t t-snippet="liber_website_customizations.pdf_documents" t-thumbnail=""/>
            </div>
        </xpath>
    </template>

</odoo>